<!DOCTYPE html>
<html>
  <head>
    <title>RailsSimpleAirbnb</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  </head>

  <body>
     <div class="navbar-wagon">
    <!-- Logo -->
     <%=link_to "Simple AirBnB", flats_path, :class => "navbar-wagon-brand" %>

    <!-- Right Navigation -->
    <div class="navbar-wagon-right hidden-xs hidden-sm">

    <form class="form-inline" action="/flats" method="get">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <input type="search" class="form-control" name="search" value=<%= @filter_form %>>
    <button type="submit" class="btn btn-primary">Search</button>
    </form>

    <%=link_to "New flat", new_flat_path, :class => "btn btn-warning" %>
    </div>
    </div>
    <div class="container">
    <%= yield %>
    </div>
  </body>
</html>
